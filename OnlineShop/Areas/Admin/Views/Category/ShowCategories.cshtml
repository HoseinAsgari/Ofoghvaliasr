@model List<ShowCategoriesAdminViewModel>

<div dir="rtl" class="mtop mx-2">
    @if (Model != null)
    {
        <div style="overflow-x:auto;">
        <table class="table table-bordered table-striped table-light table-responsive">
            <thead>
                <tr>
                    <th>تصویر دسته بندی</th>
                    <th>نام دسته بندی</th>
                    <th>نام انگلیسی</th>
                    <th>تعداد لایک ها</th>
                    <th colspan="2">گزینه ها</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><img class="img-thumbnail img-responsive" style="max-height: 250px;" src="/Resources/Pics/CategoryThumbnail/@item.CategoryThumbnailName"
                        alt="تصویر دسته بندی"></td>
                        <td>@item.CategoryName</td>
                        <td>@item.CategoryEnglishName</td>
                        <td>@item.CategoryLikedCount</td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/Category/RemoveCategory/@item.CategoryId">حذف دسته بندی</a>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/Admin/Category/EditCategory/@item.CategoryId">ویرایش دسته بندی</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table></div>
    }
    else
    {
        <h2>دسته بندی ای یافت نشد!!!</h2>
        <hr>
        <h4>برای اضافه کردن دسته بندی روی <a href="/Admin/Category/AddCategory">این</a> کلیک کنید.</h4>
    }
</div>