@model EditCategoryViewModel

<div dir="rtl" class="mtop container">
    <h1>ویرایش دسته بندی</h1>
    <hr>
    <div class="row">
        <form class="col-md-6 col-sm-8 col-12" enctype="multipart/form-data" action="/Admin/Category/EditCategory"
            method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId">
            <div class="form-group m-3">
                <label class="form-label" asp-for="CategoryPersianName"></label>
                <input class="form-control" asp-for="CategoryPersianName">
            </div>
            <div class="form-group m-3">
                <label class="form-label" asp-for="CategoryEnglishName"></label>
                <input class="form-control" asp-for="CategoryEnglishName">
            </div>
            <div class="form-group m-3">
                <label class="form-label" asp-for="CategoryThumbnailFile"></label>
                <input onchange="pictureUploaded(this)" class="form-control" asp-for="CategoryThumbnailFile">
                <img alt="تصویر بارگذاری شده" class="my-2 img-thumbnail img-responsive" style="max-height: 250px;"
                    src="/Resources/Pics/CategoryThumbnail/@Model.CategoryThumbnailName" id="show-image">
            </div>
            <div class="form-group m-3">
                <input class="btn btn-success" type="submit" value="ویرایش کردن دسته بندی">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}