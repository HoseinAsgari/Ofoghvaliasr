@model List<ShowCartProductViewModel>

<div dir="rtl" class="mtop">
    @if (Model != null)
    {
        <h1>سبد خرید من</h1>
        <hr>
        <div class="my-3 container">
            <table class="table table-striped table-bordered table-primary">
                <thead>
                    <tr>
                        <th>تصویر کالا</th>
                        <th>نام کالا</th>
                        <th>تعداد</th>
                        <th>مجموع قیمت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th class="text-center">
                                <a href="/Product/ShowProduct/@item.ProductId"><img class="img-responsive img-thumbnail" style="max-height: 200px;"
                            src="/Resources/Pics/ProductThumbnail/@item.ThumbnailName" alt="تصویر محصول"></a>
                            </th>
                            <th>@item.ProductName</th>
                            <th>@item.Amount @item.UnitOfProduct</th>
                            <th>@(item.Amount*item.ProductPrice) تومان</th>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th class="text-center"><button class="btn btn-warning" data-bs-toggle="modal"
                            data-bs-target="#finlizeCartModal">
                                <h5><b>نهایی کردن خرید</b></h5>
                            </button></th>
                        <th class="text-center" colspan="3">قیمت کل: @ViewBag.SumOfPrice</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <h2 class="text-center">سبد خرید شما خالی است!!!</h2>
    }
</div>

<div dir="rtl" class="modal fade" id="finlizeCartModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">آیا از خرید خود مطمئن هستید؟</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="row">
                    <div class="col py-3">
                        <button class="btn btn-danger" data-bs-dismiss="modal">خیر</button>
                    </div>
                    <div class="col py-3">
                        <a href="/Cart/Finlize" class="btn btn-success">بله</a>
                    </div>
                </div>
                <hr>
                <p>پس از تایید، کالا های مورد نظر برای شما  به آدرسی که از قبل تعیین کردید، فرستاده میشود. برای تغییر آدرس به <a href="/Account/Panel">پنل کاربری خود</a> مراجعه کنید.</p>
            </div>
        </div>
    </div>
</div>