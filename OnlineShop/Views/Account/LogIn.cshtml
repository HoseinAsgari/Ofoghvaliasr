@model LogInViewModel

<div dir="rtl" class="mtop container">
    <h1>ورود</h1>
    <hr />
    <form class="col-6 my-3" asp-action="LogIn" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group p-3">
            <label class="control-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group p-3">
            <label class="control-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group p-3">
            <label asp-for="RememberMe" class="form-check-label"></label>
            <input class="form-check-input" asp-for="RememberMe">
        </div>
        <div class="form-group p-3">
            <input class="btn btn-danger" type="submit" value="ورود" />
        </div>
    </form>
    <hr />
    <div class="my-3 p-3">
        <a href="/Account/SignIn" class="btn btn-primary">ثبت نام</a>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}