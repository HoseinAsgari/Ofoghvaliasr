@model ShowProductViewModel

<div class="container single_product_containerb mtop">
    <div class="row dir_rtl">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/Home/Index">خانه</a></li>
                    <li><a href="/Category/ShowCategoryProducts/@Model.CategoryName"><i class="fa fa-angle-left"
                                aria-hidden="true"></i>@Model.CategoryPersianName</a></li>
                    <li class="active"><a href="/Product/ShowProduct/@Model.ProductId"><i class="fa fa-angle-left"
                                aria-hidden="true"></i>@Model.ProductName</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row dir_rtl">
        <div class="col-md-auto col-sm-12 text-center">
            <img src="/Resources/Pics/ProductThumbnail/@Model.ThumbnailFileName" class="img-thumbnail"></img>
        </div>
        <div class="col-md-auto col-sm-12 p-4">
            <div class="product_details">
                <div class="product_details_title text-md-start text-sm-start text-center">
                    <h2>@Model.ProductName</h2>
                </div>
                <hr>
                <div class="product_price">هر @Model.UnitOfProduct @Model.ProductPrice تومان</div>
                @if (Model.ProductRate != null)
                {
                    <ul class="star_rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <li><i class="fa @(Model.ProductRate <= i ? "fa-star" : "fa-star-o")" aria-hidden="true"></i></li>
                        }
                    </ul>
                }
                <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                    <span>مقدار:</span>
                    <div class="quantity_selector">
                        <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                        <span id="quantity_value">1</span> @Model.UnitOfProduct
                        <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                    </div>
                    <button class="btn btn-danger m-3" onclick="addToCart(@Model.ProductId)">اضافه کردن
                        به سبد خرید</button>
                    <div onclick="productLiked(@Model.ProductId)"
                        class="product_favorite@(Model.ProductLiked?" active":"") d-flex flex-column align-items-center justify-content-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("Benefit")

@section Scripts{
<script src="~/Resources/LayoutReferences/js/single_custom.js"></script>
}
