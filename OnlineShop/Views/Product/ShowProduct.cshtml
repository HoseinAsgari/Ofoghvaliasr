@model ShowProductViewModel

<div class="container single_product_container">
    <div class="row dir_rtl">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/Home/Index">خانه</a></li>
                    <li><a href="/Category/ShowCategoryProducts/@Model.CategoryName"><i class="fa fa-angle-left" aria-hidden="true"></i>@Model.CategoryPersianName</a></li>
                    <li class="active"><a href="/Product/ShowProduct/@Model.ProductId"><i class="fa fa-angle-left" aria-hidden="true"></i>@Model.ProductName</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row dir_rtl">
        <div class="col-lg-7">
            <div class="single_product_pics">
                <div class="row">
                    <div class="single_product_image">
                        <div class="single_product_image_background" style="background-image:url(images/single_2.jpg)"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="product_details">
                <div class="product_details_title">
                    <h2>@Model.ProductName</h2>
                </div>
                <div class="product_price">هر @Model.UnitOfProduct @Model.ProductPrice تومان</div>
                <ul class="star_rating">
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                </ul>
                <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                    <span>مقدار:</span>
                    <div class="quantity_selector">
                        <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                        <span id="quantity_value">1 @Model.UnitOfProduct</span>
                        <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                    </div>
                    <div class="red_button add_to_cart_button"><a href="/Product/AddToCart/@Model.ProductId">اضافه کردن به سبد خرید</a></div>
                    <div onclick="productLiked(@Model.ProductId)" class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.RenderPartialAsync("Benefits")
